<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/sky2"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/txt_resultActivity_circle"
        android:layout_marginLeft="100dp"
        android:layout_above="@+id/rel_resultActivity_score"
        android:layout_marginRight="100dp"
        android:background="@drawable/goodluck"
        android:layout_width="150dp"
        android:layout_centerHorizontal="true"
        android:layout_height="150dp"
        android:textSize="16sp"/>

    <RelativeLayout
        android:id="@+id/rel_resultActivity_score"
        android:background="@android:color/transparent"
        android:layout_above="@id/img_resultActivity_picUrl"
        android:layout_width="match_parent"
        android:padding="6dp"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/txt_resultActivity_scoretype"
            android:text="Your Score is : "
            android:textColor="@color/white"
            android:textSize="20dp"
            android:layout_marginLeft="130dp"
            android:layout_alignParentLeft="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/txt_resultActivity_score"
            tools:text="score"
            android:layout_toRightOf="@id/txt_resultActivity_scoretype"
            android:textColor="#BD0B0B"
            android:textSize="24dp"
            android:layout_marginLeft="3dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </RelativeLayout>

    <ImageView
        android:id="@+id/img_resultActivity_picUrl"
        android:layout_above="@id/txt_resultActivity_answer"
        android:layout_marginRight="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="20dp"
        android:scaleType="centerCrop"
        android:layout_width="match_parent"
        android:layout_height="185dp"/>

    <TextView
        android:id="@+id/txt_resultActivity_answer"
        android:layout_above="@id/txt_resultActivity_simple"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:textColor="#000"
        android:textStyle="bold"
        android:gravity="center"
        android:padding="4dp"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20sp"/>

    <TextView
        android:id="@+id/txt_resultActivity_simple"
        android:layout_above="@id/txt_resultActivity_link"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:textStyle="bold"
        android:gravity="center"
        android:padding="6dp"
        android:background="@color/white"
        android:text="IT'S so simple. yet so awesome."
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="18sp"/>

    <TextView
        android:id="@+id/txt_resultActivity_link"
        android:layout_above="@id/txt_resultActivity_next"
        android:layout_marginRight="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="6dp"
        android:textStyle="bold"
        android:layout_alignParentRight="true"
        android:background="@drawable/txt_white_shape"
        android:text=" Read Article > "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#DD1515"
        android:padding="3dp"
        android:textSize="18sp"/>


    <TextView
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:id="@+id/txt_resultActivity_next"
        android:layout_above="@+id/txt_resultActivity_leaderboards"
        android:layout_marginRight="20dp"
        android:layout_marginTop="6dp"
        android:layout_marginLeft="20dp"
        android:layout_marginBottom="10dp"
        android:padding="8dp"
        android:text="Next Question"
        android:textColor="#000"
        android:background="@drawable/txt_blue_shape"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="18sp"/>


    <TextView
        android:padding="6dp"
        android:gravity="center"
        android:textColor="@color/white"
        android:id="@+id/txt_resultActivity_leaderboards"
        android:layout_above="@id/txt_resultActivity_exit"
        android:layout_marginRight="20dp"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="20dp"
        android:layout_marginBottom="8dp"
        android:background="@drawable/txt_geray_shape"
        android:text="How can I doing in the leaderboards? "
        android:layout_width="match_parent"
        android:textSize="19dp"
        android:layout_height="wrap_content"/>
    <TextView
        android:padding="6dp"
        android:gravity="center"
        android:textColor="@color/white"
        android:id="@+id/txt_resultActivity_exit"
        android:layout_alignParentBottom="true"
        android:layout_marginRight="20dp"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="20dp"
        android:layout_marginBottom="8dp"
        android:background="@drawable/txt_red_shape"
        android:text="Exit From Game... "
        android:layout_width="match_parent"
        android:textSize="14dp"
        android:layout_height="wrap_content"/>

</RelativeLayout>